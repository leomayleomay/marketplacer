<tr>
  <td>
    <%= product.uuid %>
  </td>
  <td>
    <%= product.name %>
  </td>
  <td>
    <%= Money.new(product.price_in_cents).format %>
  </td>
  <td>
    <%= form_for CartItem.new do |f| %>
      <%= f.hidden_field :product_id, value: product.id %>
      <%= f.hidden_field :price_in_cents, value: product.price_in_cents %>

      <%= f.submit 'Add to cart', disable_with: 'Adding ...' %>
    <% end %>
  </td>
</tr>